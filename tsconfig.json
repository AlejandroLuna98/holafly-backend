{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./app",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
